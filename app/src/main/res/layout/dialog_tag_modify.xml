<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_layout_white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:text="태그 수정"
            android:textColor="@color/dum_gray04"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.458" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_marginTop="14dp"
        android:layout_marginStart="23dp"
        android:textSize="15sp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/dum_gray02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="태그"/>

    <EditText
        android:id="@+id/dialog_folder_modify_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_layout_dum_gray01"
        android:hint="태그명을 입력하세요"
        android:paddingHorizontal="8dp"
        android:paddingVertical="6dp"
        android:textColorHint="@color/dum_gray03"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginBottom="20dp"
        android:id="@+id/dialog_folder_modify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:layout_marginVertical="14dp"
        android:background="@drawable/bg_layout_dum_blue02"
        android:paddingVertical="6dp"
        android:text="저장하기"
        android:textSize="14sp"
        android:textColor="@color/dum_gray01"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView" />

</LinearLayout>