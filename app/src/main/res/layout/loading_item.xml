<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="160dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="12dp"
    android:background="@color/dum_gray01"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/link_item_type02_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:background="@color/dum_gray02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/link_item_type02_cl_contents"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/link_item_type02_cl_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:visibility="invisible"
                android:id="@+id/link_item_type02_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:background="@color/dum_gray02"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/dum_gray04"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:visibility="invisible"
                android:id="@+id/link_item_type02_txt_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:lines="1"
                android:background="@color/dum_gray02"
                android:textColor="@color/dum_gray04"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/link_item_type02_txt_title"
                app:layout_constraintStart_toStartOf="@+id/link_item_type02_txt_title"
                app:layout_constraintTop_toBottomOf="@+id/link_item_type02_txt_title" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>